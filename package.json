{
  "name": "batboxseattle.com",
  "version": "1.0.0",
  "description": "batboxseattle.com",
  "scripts": {
    "build": "concurrently \"npm run build:prepare\" \"npm run build:webpack\"",
    "build:css": "find . -name \"*.css\" -type f -not -path \"./node_modules/*\" -not -path \"./dist/*\" | while read file; do\n    mkdir -p \"dist/$(dirname \"$file\")\"\n    postcss \"$file\" -o \"dist/$file\"\ndone\n",
    "build:dependencies": "mkdir -p dist && cp -r node_modules dist/node_modules",
    "build:prepare": "concurrently \"npm run build:dependencies\" \"npm run build:css\"",
    "build:webpack": "webpack --mode production",
    "compress-images": "node --loader ts-node/esm image-compressor.ts",
    "style:check": "style/check.sh",
    "style:fix": "style/fix.sh",
    "start": "concurrently --kill-others \"npm run build:prepare && webpack serve --mode development\" \"npm run watch:css\" \"npm run watch:dependencies\"",
    "watch:css": "chokidar '**/*.css' --ignore 'node_modules/**' --ignore 'dist/**' -c 'npm run build:css'",
    "watch:dependencies": "chokidar 'node_modules/**' -c 'npm run build:dependencies'"
  },
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@types/jquery": "^3.5.32",
    "chrono-node": "^2.7.7",
    "date-fns": "^4.1.0",
    "heap-js": "^2.6.0",
    "jquery": "^3.7.1",
    "storage-available": "^1.1.0",
    "swiper": "^11.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/puppeteer": "^5.4.7",
    "@types/swiper": "^5.4.3",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "hint": "^7.1.13",
    "htmlhint": "^1.1.4",
    "husky": "^9.1.7",
    "pm2": "^5.4.3",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "puppeteer": "^24.1.1",
    "sharp": "^0.33.5",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  }
}
